---
/**
 * * Hero with background blobs and side image
 *
 * There is a commented out "awards" section below in case you want that
 */
import { Icon } from "astro-icon";
import { Image } from "astro:assets";
import { getRelativeLocaleUrl } from "astro:i18n";

// components
import Button from "@components/Button/Button.astro";

// utils
import { getLocaleFromUrl } from "@js/localeUtils";
import { useTranslations } from "@js/translationUtils";

// images
import person1 from "@images/ashton_blackwell.jpg";
import person2 from "@images/nicola_harris.jpg";
import person3 from "@images/nic_fassbender.jpg";
import heroImage from "@assets/images/guido-couch.jpg";

const currLocale = getLocaleFromUrl(Astro.url);
const t = useTranslations(currLocale);
---

<section
  id="hero-side"
  class="mt-20 overflow-clip bg-[url('/assets/pattern-light-big.svg')] bg-center bg-no-repeat dark:bg-[url('/assets/pattern-dark-big.svg')]"
>
  <div class="site-container mx-auto px-4 pb-20 pt-10 md:py-28">
    <div class="-mx-4 flex flex-wrap xl:items-center">
      <div class="mb-16 w-full px-4 md:mb-0 md:w-1/2">
        <div data-aos="fade-right" data-aos-trigger="#hero-side">
          <span
            class="mb-4 inline-flex items-center rounded-full bg-primary-500 px-2 py-px text-xs uppercase leading-5 text-white"
          >
            Meet Guido
          </span>

          <h1
            class="mb-6 text-pretty text-3xl font-bold leading-tight tracking-tight text-base-900 dark:text-base-100 lg:text-5xl lg:leading-tight"
          >
            {t("hero_text")}
          </h1>
        </div>
        <p
          class="description mb-8 text-pretty text-lg lg:text-xl"
          data-aos="fade-right"
          data-aos-delay=".1"
          data-aos-trigger="#hero-side"
        >
          {t("hero_description")}
        </p>
        <div
          class="mt-6 flex flex-wrap gap-4"
          data-aos="fade-right"
          data-aos-delay=".2"
          data-aos-trigger="#hero-side"
        >
          <Button
            variant="primary"
            href={getRelativeLocaleUrl(currLocale, "/contact")}
          >
            Follow me on LinkedIn
          </Button>
          <Button
            variant="outline"
            href="https://cosmicthemes.com/themes/atlas/"
            target="_blank"
            rel="noopener noreferrer"
          >
            Book me for your event
          </Button>
        </div>

        <!-- social proof -->
        <div
          class="mr-auto mt-8 flex max-w-md"
          data-aos="fade-right"
          data-aos-delay=".3"
          data-aos-trigger="#hero-side"
        >
          <div class="-m-1.5 flex flex-wrap items-center">
            <div class="w-auto p-1.5">
              <div class="flex flex-wrap">
                <div
                  class="aspect-square size-10 overflow-hidden rounded-full border-2 border-primary-500 bg-primary-500"
                >
                  <Image
                    src={person1}
                    class="object-cover"
                    alt="reader"
                    loading="eager"
                    width={100}
                  />
                </div>
                <div
                  class="-ml-5 aspect-square size-10 overflow-hidden rounded-full border-2 border-primary-500 bg-primary-500"
                >
                  <Image
                    src={person2}
                    class="object-cover"
                    alt="reader"
                    loading="eager"
                    width={100}
                  />
                </div>
                <div
                  class="-ml-5 aspect-square size-10 overflow-hidden rounded-full border-2 border-primary-500 bg-primary-500"
                >
                  <Image
                    src={person3}
                    class="object-cover"
                    alt="reader"
                    loading="eager"
                    width={100}
                  />
                </div>
              </div>
            </div>
            <div class="flex-1 p-1.5 text-left">
              <p
                class="description max-w-[14rem] text-sm leading-tight tracking-tight"
              >
                Join 200+ happy and<br />
                satisfied customers.
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="w-full px-4 md:w-1/2">
        <div
          class="relative mx-auto max-w-max md:mr-0"
          data-aos="fade-left"
          data-aos-trigger="#hero-side"
        >
          <Icon
            name="atlas/circle3"
            class="absolute -left-14 -top-12 z-10 w-28 text-accent-1"
            aria-hidden="true"
          />
          <Icon
            name="atlas/dots3"
            class="absolute -bottom-8 -right-7 z-10 w-28 text-accent-2"
            aria-hidden="true"
          />
          <div class="rounded-7xl relative overflow-hidden rounded-2xl">
            <Image
              src={heroImage}
              class="h-auto min-w-full object-cover"
              alt="small business owner"
              loading="eager"
              width={600}
              densities={[1.5, 2]}
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
