---
/**
 * * Hero with background blobs and side image
 *
 * There is a commented out "awards" section below in case you want that
 */
import { Icon } from "astro-icon";
import { Image } from "astro:assets";
import { getRelativeLocaleUrl } from "astro:i18n";
import SocialIcon from "@components/SocialIcon/SocialIcon.astro";

// components
import Button from "@components/Button/Button.astro";

// utils
import { getLocaleFromUrl } from "@js/localeUtils";
import { useTranslations } from "@js/translationUtils";

// images
import person1 from "@images/ashton_blackwell.jpg";
import person2 from "@images/nicola_harris.jpg";
import person3 from "@images/nic_fassbender.jpg";
import heroImage from "@assets/images/guido-couch.jpg";

const currLocale = getLocaleFromUrl(Astro.url);
const t = useTranslations(currLocale);
---

<section
  id="hero-side"
  aria-label="Introduction"
  class="mt-20 overflow-clip bg-[url('/assets/pattern-light-big.svg')] bg-center bg-no-repeat dark:bg-[url('/assets/pattern-dark-big.svg')]"
>
  <div class="site-container mx-auto px-4 pb-20 pt-10 md:py-28">
    <div class="-mx-4 flex flex-wrap xl:items-center">
      <div class="mb-16 w-full px-4 md:mb-0 md:w-1/2">
        <div data-aos="fade-right" data-aos-trigger="#hero-side">
          <span
            class="mb-4 inline-flex min-h-[44px] min-w-[44px] items-center rounded-full bg-primary-500 px-2 py-px text-xs uppercase leading-5 text-white"
          >
            Meet Guido
          </span>

          <h1
            class="mb-6 text-pretty text-3xl font-bold leading-tight tracking-tight text-base-900 dark:text-base-100 lg:text-5xl lg:leading-tight"
          >
            {t("hero_text")}
          </h1>
        </div>
        <p
          class="description mb-8 text-pretty text-lg leading-relaxed text-base-700 dark:text-base-300 lg:text-xl"
          data-aos="fade-right"
          data-aos-delay=".1"
          data-aos-trigger="#hero-side"
        >
          {t("hero_description")}
        </p>
        <div
          class="mt-6 flex flex-wrap gap-4"
          data-aos="fade-right"
          data-aos-delay=".2"
          data-aos-trigger="#hero-side"
        >
          <Button
            variant="primary"
            href="https://www.linkedin.com/comm/mynetwork/discovery-see-all?usecase=PEOPLE_FOLLOWS&followMember=gxjansen"
            aria-label="Follow Guido Jansen on LinkedIn"
            class="min-h-[44px] min-w-[44px] focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
          >
            Follow me on LinkedIn
          </Button>
          <Button
            variant="outline"
            href="/contact"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Book Guido Jansen for your event"
            class="min-h-[44px] min-w-[44px] focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
          >
            Book me for your event
          </Button>
        </div>
        <div class="mt-6 flex flex-wrap gap-4"></div>
        <!-- Socials -->
        <nav
          class="flex flex-col"
          role="navigation"
          aria-label="Social media links"
        >
          <div class="flex gap-4">
            <SocialIcon
              href="https://www.linkedin.com/comm/mynetwork/discovery-see-all?usecase=PEOPLE_FOLLOWS&followMember=gxjansen"
              icon="tabler/brand-linkedin"
              social="linkedin"
            />
            <SocialIcon
              href="https://www.youtube.com/@gxjansen"
              icon="tabler/brand-youtube"
              social="youtube"
            />
            <SocialIcon
              href="https://github.com/gxjansen"
              icon="tabler/brand-github"
              social="github"
            />
            <SocialIcon
              href="https://bsky.app/profile/gui.do"
              icon="tabler/brand-bluesky"
              social="bluesky"
            />
            <SocialIcon
              href="https://www.instagram.com/gxjansen"
              icon="tabler/brand-instagram"
              social="instagram"
            />
            <SocialIcon
              href="https://twitter.com/guido"
              icon="tabler/brand-x"
              social="twitter (x)"
            />
          </div>
        </nav>
      </div>
      <div class="w-full px-4 md:w-1/2">
        <div
          class="relative mx-auto max-w-max md:mr-0"
          data-aos="fade-left"
          data-aos-trigger="#hero-side"
        >
          <Icon
            name="atlas/circle3"
            class="absolute -left-14 -top-12 z-10 w-28 text-accent-4"
            aria-hidden="true"
          />
          <Icon
            name="atlas/dots3"
            class="absolute -bottom-8 -right-7 z-10 w-28 text-accent-2"
            aria-hidden="true"
          />
          <div class="rounded-7xl relative overflow-hidden rounded-2xl">
            <Image
              src={heroImage}
              class="h-auto min-w-full object-cover"
              alt="Guido Jansen sitting casually on a modern office couch with a laptop"
              loading="eager"
              width={600}
              densities={[1.5, 2]}
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
