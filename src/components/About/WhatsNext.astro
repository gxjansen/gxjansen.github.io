---
/**
 * * What's Next section for the About page
 * Signals availability for community leadership opportunities
 */
import Badge from "@components/Badge/Badge.astro";
---

<section
  class="py-24 md:py-28 bg-base-100 dark:bg-base-900"
  aria-labelledby="whats-next-heading"
>
  <div class="site-container px-4">
    <div class="mx-auto max-w-3xl text-center">
      <Badge>What's Next</Badge>
      <h2
        id="whats-next-heading"
        class="h2 mb-6"
      >
        Looking for New Challenges
      </h2>
      <div class="space-y-4 text-lg md:text-xl text-base-700 dark:text-base-300">
        <p class="description">
          I'm exploring community leadership opportunities at companies with momentumâ€”where technical ecosystems can be genuine growth engines.
        </p>
        <p class="description">
          Particularly interested in <span class="text-primary-500 font-semibold">open source</span>, <span class="text-primary-500 font-semibold">AI</span>, and <span class="text-primary-500 font-semibold">privacy-focused</span> organizations.
        </p>
      </div>
      <div class="mt-8">
        <a
          href="/contact/"
          class="inline-flex items-center px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white rounded-lg font-medium transition-colors duration-200"
        >
          Get in Touch
          <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
