---
interface Props {
  episodeId: string;
  title: string;
}

const { episodeId, title } = Astro.props;
---

<div
  role="application"
  tabindex="0"
  aria-label={`Podcast player for episode: ${title}`}
  class="w-full focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
>
  <iframe
    style="border-radius:12px"
    src={`https://open.spotify.com/embed/episode/${episodeId}?theme=0`}
    width="100%"
    height="152"
    allow="clipboard-write; encrypted-media; fullscreen; picture-in-picture"
    title={`Spotify player: ${title}`}
    class="w-full"></iframe>
</div>

<script>
  // Add keyboard support
  document
    .querySelectorAll('.spotify-embed [role="application"]')
    .forEach((wrapper) => {
      wrapper.addEventListener("keydown", (event) => {
        const e = event as KeyboardEvent;
        if (e.key === "Enter" || e.key === " ") {
          event.preventDefault();
          (wrapper.querySelector("iframe") as HTMLElement)?.focus();
        }
      });
    });
</script>
