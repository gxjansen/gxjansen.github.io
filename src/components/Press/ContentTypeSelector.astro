---
// Define the content types and their icons
const contentTypes = [
  {
    id: 'awards',
    label: 'Awards',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />`
  },
  {
    id: 'videos',
    label: 'Videos',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />`
  },
  {
    id: 'podcasts',
    label: 'Podcasts',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />`
  },
  {
    id: 'articles',
    label: 'Articles',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />`
  },
  {
    id: 'listings',
    label: 'Featured In',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />`
  }
];
---

<div class="container mx-auto px-4 mb-12">
  <div class="flex flex-col sm:flex-row justify-center gap-3 sm:gap-4">
    {contentTypes.map(type => (
      <a
        href={`#${type.id}`}
        class="px-4 sm:px-6 py-3 bg-primary-500 text-base-100 dark:text-base-900 rounded-lg hover:bg-primary-600 transition flex items-center justify-center gap-2 w-full sm:w-auto"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <Fragment set:html={type.icon} />
        </svg>
        {type.label}
      </a>
    ))}
  </div>
</div>
