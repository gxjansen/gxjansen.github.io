---
/**
 * * Colleague testimonials section with strategic grid layout
 * * Shows 4 rotating testimonials from colleagues with LinkedIn link
 * * Uses client-side randomization for dynamic content on each page load
 */

// components
import Badge from "@components/Badge/Badge.astro";
import ColleagueTestimonialCard from "./ColleagueTestimonialCard.astro";

// data
import {
  getRandomTestimonials,
  colleagueTestimonials,
} from "@config/colleagueTestimonialData";

// Get initial testimonials for SSR (will be replaced client-side)
const initialTestimonials = getRandomTestimonials(4);
---

<section id="colleague-testimonials" class="py-24 md:py-28">
  <div class="site-container px-2 sm:px-4">
    <div class="mx-auto mb-12 max-w-3xl text-center">
      <Badge>Testimonials</Badge>
      <h2 class="h2 mb-4">
        <a
          href="https://www.linkedin.com/in/gxjansen/details/recommendations/"
          target="_blank"
          rel="noopener noreferrer"
          class="transition-colors duration-200 hover:text-primary-600"
        >
          What my colleagues say
        </a>
      </h2>
      <p class="description text-lg md:text-xl">
        Recommendation excerpts written by colleagues on LinkedIn
      </p>
    </div>

    <div
      id="testimonials-grid"
      class="grid gap-6 sm:grid-cols-2 md:gap-8 lg:grid-cols-2 xl:grid-cols-2"
    >
      {
        initialTestimonials.map((testimonial, index) => (
          <div
            data-testimonial-id={testimonial.id}
            class="testimonial-card-wrapper"
          >
            <ColleagueTestimonialCard {...testimonial} />
          </div>
        ))
      }
    </div>

    <div class="mt-12 text-center">
      <a
        href="https://www.linkedin.com/in/gxjansen/details/recommendations/"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center font-medium text-primary-600 transition-colors duration-200 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300"
      >
        View the full, 80+ recommendations on my LinkedIn profile (login
        required)
        <svg
          class="ml-2 h-4 w-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
          ></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<script>
  import { getRandomTestimonials } from "@config/colleagueTestimonialData";

  function randomizeTestimonials() {
    const grid = document.getElementById("testimonials-grid");
    if (!grid) return;

    // Get random testimonials
    const testimonials = getRandomTestimonials(4);

    // Build HTML for each testimonial card with AOS attributes
    const cardsHTML = testimonials
      .map(
        (testimonial, index) => `
      <div data-testimonial-id="${testimonial.id}" class="testimonial-card-wrapper">
        <article class="colleague-testimonial-card bg-base-50 dark:bg-base-800 rounded-xl shadow-md p-4 sm:p-6 h-full flex flex-col transition-all duration-300 hover:shadow-lg">
          <blockquote class="flex-grow mb-6">
            <svg class="w-8 h-8 text-primary-600 dark:text-primary-400 mb-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
            </svg>
            <p class="text-base-700 dark:text-base-300 leading-relaxed">${testimonial.quote}</p>
          </blockquote>

          <footer class="border-t border-base-300 dark:border-base-700 pt-4">
            <div class="flex items-start justify-between">
              <div class="flex-grow">
                <cite class="not-italic">
                  <div class="font-semibold text-base-900 dark:text-base-100">${testimonial.name}</div>
                  <div class="text-sm text-base-600 dark:text-base-400">${testimonial.role}</div>
                  <div class="text-sm text-base-600 dark:text-base-400">${testimonial.company}</div>
                  <div class="text-xs text-base-500 dark:text-base-400 mt-1 italic">${testimonial.workRelationship}</div>
                </cite>
              </div>
            </div>
          </footer>
        </article>
      </div>
    `,
      )
      .join("");

    // Update the grid with smooth transition
    grid.style.opacity = "0";
    setTimeout(() => {
      grid.innerHTML = cardsHTML;
      grid.style.opacity = "1";
    }, 150);
  }

  // Randomize on initial page load
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", randomizeTestimonials);
  } else {
    randomizeTestimonials();
  }

  // Randomize on view transitions navigation
  document.addEventListener("astro:after-swap", randomizeTestimonials);
</script>

<style>
  #colleague-testimonials .testimonial-card-wrapper {
    visibility: visible;
    opacity: 1;
  }

  #colleague-testimonials .grid {
    display: grid;
  }

  #testimonials-grid {
    transition: opacity 150ms ease-in-out;
  }
</style>
