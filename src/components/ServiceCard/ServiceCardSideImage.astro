---
/**
 * * These are alternating side cards with titles, text, and images
 * Recommend using 2 or 3 cards in a row
 */

import { getRelativeLocaleUrl } from "astro:i18n";
import { Image } from "astro:assets";
import { Icon } from "astro-icon";

// components
import Button from "@components/Button/Button.astro";

// utils
import { getLocaleFromUrl } from "@js/localeUtils";

interface Props {
  title: string;
  details: string;
  href: string;
  image: ImageMetadata;
  imageSide: "left" | "right";
  idx: number;
  ctaText?: string;
  showCta?: boolean;
  // Optional second CTA button
  href2?: string;
  ctaText2?: string;
}

const {
  image,
  title,
  href,
  idx,
  details,
  imageSide,
  ctaText = "Learn more",
  showCta = true,
  href2,
  ctaText2,
} = Astro.props as Props;

const currLocale = getLocaleFromUrl(Astro.url);
const isExternalLink =
  href && (href.startsWith("http://") || href.startsWith("https://"));
const isExternalLink2 =
  href2 && (href2.startsWith("http://") || href2.startsWith("https://"));
const cardId = `biography-${title.toLowerCase().replace(/\s+/g, "-")}`;
---

<article
  class="mx-auto grid gap-8 rounded-xl md:grid-cols-2 md:gap-12 lg:gap-20"
  id={cardId}
  role="listitem"
  aria-labelledby={`${cardId}-title`}
>
  <!-- Text content -->
  <div
    class={`${imageSide === "left" ? "md:order-last" : ""} col-span-1`}
    aria-labelledby={`${cardId}-title`}
  >
    <header>
      <h3 id={`${cardId}-title`} class="h2 mt-6">
        {title}
      </h3>
    </header>
    <div class="mt-6" aria-label={`Details about ${title}`}>
      <p class="description" id={`${cardId}-description`}>
        {details}
      </p>
    </div>
    {
      showCta && (
        <div
          class="z-20 mt-8 flex flex-wrap gap-4"
          aria-label={`Actions for ${title}`}
        >
          <Button
            variant="primary"
            href={
              isExternalLink ? href : getRelativeLocaleUrl(currLocale, href)
            }
            arrow="none"
            aria-label={`${ctaText} about ${title}${isExternalLink ? " (opens in new tab)" : ""}`}
            aria-describedby={`${cardId}-description`}
          >
            {ctaText}
          </Button>
          {href2 && ctaText2 && (
            <Button
              variant="secondary"
              href={
                isExternalLink2
                  ? href2
                  : getRelativeLocaleUrl(currLocale, href2)
              }
              arrow="none"
              aria-label={`${ctaText2} about ${title}${isExternalLink2 ? " (opens in new tab)" : ""}`}
              aria-describedby={`${cardId}-description`}
            >
              {ctaText2}
            </Button>
          )}
        </div>
      )
    }
  </div>

  <!-- Image content -->
  <div class="relative mx-auto max-w-4xl" role="presentation">
    <!-- Decorative elements -->
    <div aria-hidden="true">
      <Icon
        name="atlas/circle3"
        class={`absolute -left-8 -top-4 z-10 w-20 md:-top-8 md:w-28 ${
          imageSide === "right" ? "text-accent-1" : "text-accent-4 rotate-90"
        }`}
        role="presentation"
      />
      <Icon
        name="atlas/dots3"
        class={`absolute -bottom-4 -right-7 z-10 w-20 text-accent-2 md:-bottom-8 md:w-28 ${
          imageSide === "right" ? "text-accent-2" : "text-accent-3"
        }`}
        role="presentation"
      />
    </div>

    <!-- Main image -->
    <figure>
      <Image
        class="relative rounded-xl border border-transparent object-cover"
        src={image}
        alt={`Illustration for ${title} period`}
        height={700}
        loading="lazy"
        decoding="async"
      />
    </figure>
  </div>
</article>

<style>
  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .transition {
      transition: none;
    }
  }

  /* High contrast mode enhancements */
  @media (forced-colors: active) {
    .border {
      border-color: CanvasText;
    }

    .text-accent-1,
    .text-accent-2,
    .text-accent-3,
    .text-accent-4 {
      color: CanvasText;
    }
  }

  /* Focus styles for interactive elements */
  :focus-visible {
    outline: 2px solid var(--focus-ring-color, theme("colors.primary.500"));
    outline-offset: 2px;
  }
</style>
