<style>
  /* Mobile: show mobile version, hide desktop */
  .game-ui-mobile {
    display: block;
  }
  .game-ui-desktop {
    display: none;
  }

  /* Desktop (768px+): hide mobile, show desktop */
  @media (min-width: 768px) {
    .game-ui-mobile {
      display: none;
    }
    .game-ui-desktop {
      display: block;
    }
  }
</style>
