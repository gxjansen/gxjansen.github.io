---
import { Icon } from "astro-icon";
import Badge from "@components/Badge/Badge.astro";

const pageTitle = "Press / Media";
---

<section id="services-icon" class="py-24 md:py-28">
  <div
    class="site-container bg-[url('/assets/pattern-light.svg')] bg-center bg-no-repeat dark:bg-[url('/assets/pattern-dark.svg')]"
  >
    <div class="mx-auto mb-16 text-center md:max-w-4xl" data-reveal="fade-up">
      <Badge>Media</Badge>
      <h2 class="h2 mb-4">{pageTitle}</h2>
      <p class="description text-lg md:text-xl">
        I'm interviewed by different media regularly and appear on different
        (online and offline) panels. Below you can find a selection of these.
        Contact me if you're interested in interviewing me or having me on your
        event!
      </p>
    </div>

    <!-- Content Type Selector -->
    <div class="container mx-auto mb-12 px-4">
      <div class="flex space-x-4">
        <a
          href="#videos"
          class="flex items-center gap-2 rounded-lg bg-primary-500 px-6 py-3 text-base-100 transition hover:bg-primary-600 dark:text-base-900"
        >
          <svg
            class="h-5 w-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Videos
        </a>
        <a
          href="#podcasts"
          class="flex items-center gap-2 rounded-lg bg-primary-500 px-6 py-3 text-base-100 transition hover:bg-primary-600 dark:text-base-900"
        >
          <svg
            class="h-5 w-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"
            ></path>
          </svg>
          Podcasts
        </a>
        <a
          href="#articles"
          class="flex items-center gap-2 rounded-lg bg-primary-500 px-6 py-3 text-base-100 transition hover:bg-primary-600 dark:text-base-900"
        >
          <svg
            class="h-5 w-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
            ></path>
          </svg>
          Articles
        </a>
      </div>
    </div>
  </div>
</section>
