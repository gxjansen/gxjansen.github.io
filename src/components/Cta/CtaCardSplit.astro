---
/**
 * * CTA split with text left and button on the right, with primary color background and light text
 */

import { Icon } from "astro-icon";

// components
import Button from "@components/Button/Button.astro";
---

<section 
  class="py-10"
  aria-labelledby="cta-heading"
>
  <div class="site-container">
    <div
      class="relative overflow-hidden rounded-md bg-primary-500 px-16 py-11 md:py-20"
      role="region"
      aria-label="Call to action"
    >
      <Icon
        name="atlas/dots3"
        class="absolute left-4 top-0 z-10 size-16 text-accent-4"
        aria-hidden="true"
        role="presentation"
      />
      <Icon
        name="atlas/dots3"
        class="absolute bottom-0 right-4 z-10 size-16 text-accent-4"
        aria-hidden="true"
        role="presentation"
      />
      <Icon
        name="atlas/wave-bg-basic"
        class="absolute left-1/2 top-1/2 h-full w-full max-w-full -translate-x-1/2 -translate-y-1/2 object-cover text-base-100/5"
        aria-hidden="true"
        role="presentation"
      />

      <div 
        class="relative z-20 -m-3 flex flex-wrap items-center"
        role="presentation"
      >
        <div class="w-full p-3 md:w-1/2">
          <h2
            id="cta-heading"
            class="mb-6 text-4xl font-bold tracking-tighter text-base-100 dark:text-base-900"
          >
            Ready to discover what your ecosystem could become?
          </h2>
          <p
            class="font-semibold text-base-100 dark:text-base-900"
            aria-describedby="cta-heading"
          >
            I speak at international conferences regularly and often get voted best speaker of the event. Want me at yours? Let's talk.
          </p>
        </div>
        <div class="flex w-full p-3 md:w-1/2 md:justify-end">
          <Button
            variant="on-color"
            href="/contact"
            target="_blank"
            rel="noopener noreferrer"
            class="shadow-none focus:outline-none focus:ring-2 focus:ring-base-100 focus:ring-offset-2 focus:ring-offset-primary-500"
            aria-label="Book Guido for your event (opens in new tab)"
          >
            <span>Book Guido</span>
          </Button>
        </div>
      </div>
    </div>
  </div>
</section>
