---
// layout
import BaseLayout from "@layouts/BaseLayout.astro";

// components
import { Image } from 'astro:assets';
import Badge from "@components/Badge/Badge.astro";
import Button from "@components/Button/Button.astro";

// images
import speakerImage from '@images/headshot/08.02.2022_Spryker_CEO_0278.jpg';
import headshot1 from '@images/headshot/08.02.2022_Spryker_CEO_0278.jpg';
import headshot2 from '@images/headshot/08.02.2022_Spryker_CEO_2636.jpg';
import headshot3 from '@images/headshot/08.02.2022_Spryker_CEO_2669.jpg';
---

<BaseLayout 
  title="Conference Terms - Guido Jansen"
  description="Everything organizers typically want to know about me. Speaking terms, requirements, and booking information."
  noindex={true}
>
  <!-- Hero Section (mt-14 matches fixed nav height h-14) -->
  <section class="relative mt-14 py-24 md:py-32 overflow-hidden">
    <!-- Background with speaking photo -->
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-gradient-to-br from-primary-500/90 via-primary-500/70 to-accent-2/80"></div>
      <div class="absolute inset-0 bg-black/30"></div>
    </div>
    
    <div class="site-container relative z-10">
      <div class="mx-auto max-w-4xl text-center text-white">
        <Badge class="mb-6">Speaker Information</Badge>
        <h1 class="h1 mb-6 text-white">Conference Terms</h1>
        <p class="text-xl md:text-2xl mb-8 opacity-90">
          Everything organizers typically want to know about me
        </p>
        <p class="text-lg opacity-80 max-w-2xl mx-auto">
          Community Builder with 20+ years creating technical ecosystems. 200+ conference
          talks across 26 countries. If you're interested in having me speak at your event,
          you'll find all the information you need below.
        </p>
      </div>
    </div>
  </section>

  <!-- What You Can Find Section -->
  <section class="py-16 md:py-20">
    <div class="site-container">
      <div class="mx-auto mb-16 text-center md:max-w-3xl" data-reveal="fade-up">
        <h2 class="h2 mb-4">What you can find on this page:</h2>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 md:gap-8" data-reveal="fade-up">
        <div class="text-center group">
          <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-base-200 dark:bg-base-700/50 flex items-center justify-center group-hover:bg-primary-500/20 dark:group-hover:bg-primary-500/30 transition-colors">
            <svg class="w-8 h-8 text-primary-600 dark:text-primary-400/90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-base-900 dark:text-base-100 mb-2">Rider Kit</h3>
          <p class="text-sm text-base-500 dark:text-base-400">Technical and logistical requirements</p>
        </div>

        <div class="text-center group" data-reveal="fade-up" data-reveal-delay="1">
          <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-base-200 dark:bg-base-700/50 flex items-center justify-center group-hover:bg-primary-500/20 dark:group-hover:bg-primary-500/30 transition-colors">
            <svg class="w-8 h-8 text-primary-600 dark:text-primary-400/90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-base-900 dark:text-base-100 mb-2">Bio Format</h3>
          <p class="text-sm text-base-500 dark:text-base-400">Speaker biography and credentials</p>
        </div>

        <div class="text-center group" data-reveal="fade-up" data-reveal-delay="2">
          <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-base-200 dark:bg-base-700/50 flex items-center justify-center group-hover:bg-primary-500/20 dark:group-hover:bg-primary-500/30 transition-colors">
            <svg class="w-8 h-8 text-primary-600 dark:text-primary-400/90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-base-900 dark:text-base-100 mb-2">Fee</h3>
          <p class="text-sm text-base-500 dark:text-base-400">Speaking fees and expenses</p>
        </div>

        <div class="text-center group" data-reveal="fade-up" data-reveal-delay="3">
          <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-base-200 dark:bg-base-700/50 flex items-center justify-center group-hover:bg-primary-500/20 dark:group-hover:bg-primary-500/30 transition-colors">
            <svg class="w-8 h-8 text-primary-600 dark:text-primary-400/90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-base-900 dark:text-base-100 mb-2">Testimonials</h3>
          <p class="text-sm text-base-500 dark:text-base-400">What others say about my talks</p>
        </div>

        <div class="text-center group" data-reveal="fade-up" data-reveal-delay="4">
          <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-base-200 dark:bg-base-700/50 flex items-center justify-center group-hover:bg-primary-500/20 dark:group-hover:bg-primary-500/30 transition-colors">
            <svg class="w-8 h-8 text-primary-600 dark:text-primary-400/90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-base-900 dark:text-base-100 mb-2">Travel & Accommodation</h3>
          <p class="text-sm text-base-500 dark:text-base-400">Logistics and requirements</p>
        </div>

        <div class="text-center group" data-reveal="fade-up" data-reveal-delay="5">
          <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-base-200 dark:bg-base-700/50 flex items-center justify-center group-hover:bg-primary-500/20 dark:group-hover:bg-primary-500/30 transition-colors">
            <svg class="w-8 h-8 text-primary-600 dark:text-primary-400/90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-base-900 dark:text-base-100 mb-2">AV/Tech Requirements</h3>
          <p class="text-sm text-base-500 dark:text-base-400">Technical setup needed</p>
        </div>

        <div class="text-center group" data-reveal="fade-up" data-reveal-delay="6">
          <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-base-200 dark:bg-base-700/50 flex items-center justify-center group-hover:bg-primary-500/20 dark:group-hover:bg-primary-500/30 transition-colors">
            <svg class="w-8 h-8 text-primary-600 dark:text-primary-400/90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-base-900 dark:text-base-100 mb-2">Content for Your Marketing</h3>
          <p class="text-sm text-base-500 dark:text-base-400">Materials to promote the event</p>
        </div>

        <div class="text-center group" data-reveal="fade-up" data-reveal-delay="7">
          <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-base-200 dark:bg-base-700/50 flex items-center justify-center group-hover:bg-primary-500/20 dark:group-hover:bg-primary-500/30 transition-colors">
            <svg class="w-8 h-8 text-primary-600 dark:text-primary-400/90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-base-900 dark:text-base-100 mb-2">And the Rest...</h3>
          <p class="text-sm text-base-500 dark:text-base-400">Additional information and details</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Bio Section -->
  <section class="py-16 md:py-20 bg-base-200/30 dark:bg-base-700/30">
    <div class="site-container">
      <div class="mx-auto max-w-6xl">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div data-reveal="fade-right">
            <Image
              src={speakerImage}
              alt="Guido Jansen speaking at a conference"
              class="rounded-2xl shadow-lg w-full"
              widths={[400, 800, 1200]}
              sizes="(min-width: 768px) 50vw, 100vw"
              quality={90}
              format="webp"
            />
          </div>
          <div data-reveal="fade-left">
            <Badge class="mb-4">About the Speaker</Badge>
            <h2 class="h2 mb-6">Guido Jansen</h2>
            <div class="prose prose-lg text-base-500 dark:text-base-400 space-y-4">
              <p>
                Guido is a Community Builder who transforms technical ecosystems into business growth engines. With 20+ years at the intersection of psychology and technology, he has built community functions from zero multiple times.
              </p>
              <p>
                His cognitive psychology background shapes how he approaches every community decision. He understands why developers and technical users behave the way they do, which lets him design interventions that actually work.
              </p>
              <p>
                He has presented at 200+ conferences across 26 countries on topics including composable commerce, community building, and digital psychology.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Am I the Right Fit Section -->
  <section class="py-16 md:py-20">
    <div class="site-container">
      <div class="mx-auto max-w-4xl text-center mb-12" data-reveal="fade-up">
        <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-primary-500/10 flex items-center justify-center">
          <svg class="w-8 h-8 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h2 class="h2 mb-6">Am I the right fit?</h2>
      </div>

      <div class="mx-auto max-w-3xl" data-reveal="fade-up">
        <div class="prose prose-lg text-base-500 dark:text-base-400 space-y-6 mx-auto text-center">
          <p>
            Before you reach out, please ensure you understand my speaking goals and the specific objectives for the session. What is your ultimate goal, and who is your target audience? What do you want them to be able to say after the session? Please let me be clear that this is not to be difficult; this is to ensure my session is not just for your audience and deliver the content in the most useful way.
          </p>
          <p>
            To make this easy for you, I've created an online form you can fill out to give me all the needed information. Please fill out the form at least 3 months before your event.
          </p>
          <div class="mt-8">
            <Button href="https://docs.google.com/forms/d/e/1FAIpQLSf7yj4sn0qxaSbvnuIflFbN9C3SyFoz4crYQaJkdry9s8zWEg/viewform?usp=sf_link" variant="primary">
              Contact Information Form
            </Button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Talk Format Section -->
  <section class="py-16 md:py-20 bg-base-200/30 dark:bg-base-700/30">
    <div class="site-container">
      <div class="mx-auto max-w-4xl text-center mb-12" data-reveal="fade-up">
        <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-primary-500/10 flex items-center justify-center">
          <svg class="w-8 h-8 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2m0 0V3a1 1 0 011 1v1M7 4V3a1 1 0 011-1m0 0h8m-8 0V2m8 2v1m0-1V2m0 2h1M8 7h8v10H8V7z"></path>
          </svg>
        </div>
        <h2 class="h2 mb-6">Talk format</h2>
      </div>

      <div class="mx-auto max-w-3xl" data-reveal="fade-up">
        <div class="prose prose-lg text-base-500 dark:text-base-400 space-y-6 mx-auto">
          <p>
            My talks are easy to understand sessions on usability, persuasion, conversion optimization, building experimentation culture, CRO teams and community building. They are usually designed for a wide variety of audiences and can be adapted to fit beginners as well as intermediate audiences. The focus is on building audience awareness while providing actionable takeaways.
          </p>
          <p>
            I usually prefer to present the opening or closing keynote at events, as it allows for more inspiration and practical insights. I'm experienced with live interviews or panels on-stage and will often engage with the audience for light content but will have conversations for the rest of the keynote. I'm also happy to organize the line-up where the technology-focused talks and insights follow, and I will focus on the background of your audience.
          </p>
          <p>
            Depending on the topic and the conference, I usually prefer to present the opening or closing keynote at events, with panels in-between technical talks. My talk usually lasts 30-60 minutes and suits an audience between 25-2500 people.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Fee Section -->
  <section class="py-16 md:py-20">
    <div class="site-container">
      <div class="mx-auto max-w-4xl text-center mb-12" data-reveal="fade-up">
        <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-primary-500/10 flex items-center justify-center">
          <svg class="w-8 h-8 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
          </svg>
        </div>
        <h2 class="h2 mb-6">Fee</h2>
      </div>

      <div class="mx-auto max-w-4xl" data-reveal="fade-up">
        <div class="bg-base-100 dark:bg-base-900 rounded-2xl p-8 shadow-sm border border-base-200 dark:border-base-700">
          <div class="text-center mb-8">
            <div class="text-4xl font-bold text-primary-600 dark:text-primary-400 mb-2">€5000</div>
            <div class="text-lg text-base-500 dark:text-base-400">+ VAT + expenses (Travel + accommodation)</div>
          </div>
          
          <div class="prose prose-lg text-base-500 dark:text-base-400 space-y-6">
            <p>
              My talks are about entertaining and teaching an audience. I do not sell any products or services in your presentations and I cannot afford to speak for free as a commercial conference – thanks for your understanding.
            </p>
            <p>
              This talk content and teaching your audience building, CRO teams and community building. They are usually designed for a wide variety of audiences, from building awareness, increasing and building communities and digital consultants. The focus is to increase knowledge while providing actionable takeaways that will support your audience and your event.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Payment Terms Section -->
  <section class="py-16 md:py-20 bg-base-200/30 dark:bg-base-700/30">
    <div class="site-container">
      <div class="mx-auto max-w-4xl text-center mb-12" data-reveal="fade-up">
        <h2 class="h2 mb-6">Payment terms</h2>
      </div>

      <div class="mx-auto max-w-6xl" data-reveal="fade-up">
        <div class="space-y-8">
          <div class="prose prose-lg max-w-none text-base-500 dark:text-base-400 space-y-6">
            <p>
              At least €2500 should be paid in EUR (€) via wire transfer or PayPal to account. I pay my own taxes and fees in my country so this fee is net amount that I need to receive to speak for free at a commercial conference and events.
            </p>
            <p>
              My payment must be received before I speak for your event. Please let me know the form of payment you would be happy to provide, with my pay split being 3+ months before the session.
            </p>
          </div>

          <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-base-100 dark:bg-base-900 rounded-xl p-6 border border-base-200 dark:border-base-700">
              <h3 class="text-xl font-semibold mb-4 text-base-900 dark:text-base-100">Deposit</h3>
              <p class="text-base-500 dark:text-base-400">50% of the quoted project fee to date as we move forward to speak the dates for your session.</p>
            </div>
            <div class="bg-base-100 dark:bg-base-900 rounded-xl p-6 border border-base-200 dark:border-base-700">
              <h3 class="text-xl font-semibold mb-4 text-base-900 dark:text-base-100">Final Payment</h3>
              <p class="text-base-500 dark:text-base-400">The remaining balance due after your session is completed.</p>
            </div>
          </div>

          <div class="bg-base-100 dark:bg-base-900 rounded-xl p-6 border border-base-200 dark:border-base-700">
            <h3 class="text-xl font-semibold mb-4 text-base-900 dark:text-base-100">Booking Terms</h3>
            <ul class="space-y-2 text-base-500 dark:text-base-400">
              <li>• This is a no-strings-attached booking fee. When I receive it, you can count on the booked for your events.</li>
              <li>• Your payments cannot be refunded before I leave for your organization's signature on event.</li>
              <li>• The payment period and fee structure is <strong>non-negotiable</strong> for any given below, so you really have to negotiate higher fees if you need me to speak for any cheaper.</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-16 md:py-20">
    <div class="site-container">
      <div class="mx-auto max-w-4xl text-center mb-12" data-reveal="fade-up">
        <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-primary-500/10 flex items-center justify-center">
          <svg class="w-8 h-8 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
          </svg>
        </div>
        <h2 class="h2 mb-6">What others say</h2>
        <p class="text-lg text-base-500 dark:text-base-400">
          Feedback from event organizers and attendees
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-base-100 dark:bg-base-900 rounded-xl p-6 border border-base-200 dark:border-base-700" data-reveal="fade-up">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-base-200 dark:bg-base-700/50 rounded-full flex items-center justify-center">
                <span class="text-primary-600 dark:text-primary-400 font-semibold">E</span>
              </div>
            </div>
            <div>
              <blockquote class="text-base-500 dark:text-base-400 mb-4">
                "Guido is an excellent public speaker. Whether it's a workshop, a conference talk, or a meetup, he always manages to bring energy and knowledge to his presentations."
              </blockquote>
              <div>
                <div class="font-semibold text-base-900 dark:text-base-100">Erin Weigel</div>
                <div class="text-sm text-base-500 dark:text-base-400">Advisor, ABsmartly</div>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-base-100 dark:bg-base-900 rounded-xl p-6 border border-base-200 dark:border-base-700" data-reveal="fade-up" data-reveal-delay="1">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-base-200 dark:bg-base-700/50 rounded-full flex items-center justify-center">
                <span class="text-primary-600 dark:text-primary-400 font-semibold">A</span>
              </div>
            </div>
            <div>
              <blockquote class="text-base-500 dark:text-base-400 mb-4">
                "Give him a stage and the audience will love him!"
              </blockquote>
              <div>
                <div class="font-semibold text-base-900 dark:text-base-100">Alex Franke</div>
                <div class="text-sm text-base-500 dark:text-base-400">EVP, Spryker</div>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-base-100 dark:bg-base-900 rounded-xl p-6 border border-base-200 dark:border-base-700" data-reveal="fade-up" data-reveal-delay="2">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-base-200 dark:bg-base-700/50 rounded-full flex items-center justify-center">
                <span class="text-primary-600 dark:text-primary-400 font-semibold">J</span>
              </div>
            </div>
            <div>
              <blockquote class="text-base-500 dark:text-base-400 mb-4">
                "His session was extremely well received by a diverse audience of web development professionals. Guido's ability to communicate complex topics in a clear and engaging manner made his talk a highlight of the event."
              </blockquote>
              <div>
                <div class="font-semibold text-base-900 dark:text-base-100">John O'Connor</div>
                <div class="text-sm text-base-500 dark:text-base-400">Development Inspector, Charles White Limited</div>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-base-100 dark:bg-base-900 rounded-xl p-6 border border-base-200 dark:border-base-700" data-reveal="fade-up" data-reveal-delay="3">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-base-200 dark:bg-base-700/50 rounded-full flex items-center justify-center">
                <span class="text-primary-600 dark:text-primary-400 font-semibold">T</span>
              </div>
