---
// layout
import BaseLayout from "@layouts/BaseLayout.astro";

// components
import { Image } from 'astro:assets';
import Badge from "@components/Badge/Badge.astro";

// images
import speakerImage from '@images/headshot/08.02.2022_Spryker_CEO_0278.webp';
import headshot1 from '@images/headshot/08.02.2022_Spryker_CEO_0278.webp';
import headshot2 from '@images/headshot/08.02.2022_Spryker_CEO_2636.webp';
import headshot3 from '@images/headshot/08.02.2022_Spryker_CEO_2669.webp';
---

<BaseLayout 
  title="Conference Terms - Guido Jansen"
  description="Everything organizers typically want to know about me. Speaking terms, requirements, and booking information."
  noindex={true}
>
  <!-- Hero Section -->
  <section class="relative py-24 md:py-32 overflow-hidden">
    <!-- Background with speaking photo -->
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-gradient-to-br from-primary/90 via-primary/70 to-accent/80"></div>
      <div class="absolute inset-0 bg-black/30"></div>
    </div>
    
    <div class="site-container relative z-10">
      <div class="mx-auto max-w-4xl text-center text-white">
        <Badge class="mb-6">Speaker Information</Badge>
        <h1 class="h1 mb-6 text-white">Conference Terms</h1>
        <p class="text-xl md:text-2xl mb-8 opacity-90">
          Everything organizers typically want to know about me
        </p>
        <p class="text-lg opacity-80 max-w-2xl mx-auto">
          I'm passionate about helping organizations optimize their digital experiences. 
          If you're interested in having me speak at your event, you can find all the 
          information about my speaking terms and requirements below.
        </p>
      </div>
    </div>
  </section>

  <!-- What You Can Find Section -->
  <section class="py-16 md:py-20">
    <div class="site-container">
      <div class="mx-auto mb-16 text-center md:max-w-3xl" data-aos="fade-up">
