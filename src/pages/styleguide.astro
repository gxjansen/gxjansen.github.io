---
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/Button/Button.astro";
import SocialCard from "../components/SocialCard/SocialCard.astro";
import Badge from "../components/Badge/Badge.astro";
import ThemeToggle from "../components/ThemeToggle/ThemeToggle.astro";
import NavLink from "../components/Nav/NavLink.astro";
import NavDropdown from "../components/Nav/NavDropdown/NavDropdown.astro";
import type { navLinkItem, navDropdownItem } from "@config/types/configDataTypes";

// Define example buttons for different variants and states
const buttonExamples = [
  { variant: "primary", text: "Primary Button" },
  { variant: "secondary", text: "Secondary Button" },
  { variant: "outline", text: "Outline Button" },
  { variant: "ghost", text: "Ghost Button" }
] as const;

const arrowExamples = [
  { arrow: "left", text: "Back" },
  { arrow: "right", text: "Next" }
] as const;
---

<BaseLayout title="UI Style Guide" description="A comprehensive guide to UI components and their usage">
  <main class="container mx-auto px-4 pt-32 pb-16 max-w-7xl">
    <h1 class="h1">UI Style Guide</h1>
    <p class="description">
      Use the theme toggle below to test components in both light and dark modes.
      All components should maintain proper contrast and visibility in both modes.
    </p>
    <div class="mb-12">
      <ThemeToggle />
    </div>

    <!-- Index -->
    <section class="mb-16">
      <h2 class="h2 mb-6">On this page</h2>
      <nav class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <div>
          <a href="#buttons" class="primary-link text-lg">Buttons</a>
          <ul class="mt-2 ml-4">
            <li class="mt-1"><a href="#button-variants" class="primary-link">Basic Variants</a></li>
            <li class="mt-1"><a href="#button-states" class="primary-link">States</a></li>
            <li class="mt-1"><a href="#button-arrows" class="primary-link">With Arrows</a></li>
            <li class="mt-1"><a href="#button-links" class="primary-link">Link Buttons</a></li>
          </ul>
        </div>
        <div>
          <a href="#typography" class="primary-link text-lg">Typography</a>
          <ul class="mt-2 ml-4">
            <li class="mt-1"><a href="#headings" class="primary-link">Headings</a></li>
            <li class="mt-1"><a href="#semantic-headings" class="primary-link">Semantic Headings</a></li>
            <li class="mt-1"><a href="#text-sizes" class="primary-link">Text Sizes</a></li>
            <li class="mt-1"><a href="#font-weights" class="primary-link">Font Weights</a></li>
            <li class="mt-1"><a href="#body-text" class="primary-link">Body Text</a></li>
            <li class="mt-1"><a href="#links" class="primary-link">Links</a></li>
          </ul>
        </div>
        <div class="space-y-6">
          <div>
            <a href="#badges" class="primary-link text-lg">Badges</a>
            <ul class="mt-2 ml-4">
              <li class="mt-1"><a href="#basic-badge" class="primary-link">Basic Badge</a></li>
              <li class="mt-1"><a href="#badge-label" class="primary-link">With Label</a></li>
              <li class="mt-1"><a href="#badge-context" class="primary-link">In Context</a></li>
              <li class="mt-1"><a href="#filter-badges" class="primary-link">Filter Badges</a></li>
            </ul>
          </div>
          <div>
            <a href="#alerts" class="primary-link text-lg">Alerts</a>
            <ul class="mt-2 ml-4">
              <li class="mt-1"><a href="#alert-info" class="primary-link">Info Alert</a></li>
              <li class="mt-1"><a href="#alert-success" class="primary-link">Success Alert</a></li>
              <li class="mt-1"><a href="#alert-warning" class="primary-link">Warning Alert</a></li>
              <li class="mt-1"><a href="#alert-error" class="primary-link">Error Alert</a></li>
              <li class="mt-1"><a href="#alert-neutral" class="primary-link">Neutral Alert</a></li>
              <li class="mt-1"><a href="#alert-neutral-dark" class="primary-link">Neutral Dark Alert</a></li>
              <li class="mt-1"><a href="#alert-accent" class="primary-link">Accent Alert</a></li>
              <li class="mt-1"><a href="#alert-with-actions" class="primary-link">Alert with Actions</a></li>
            </ul>
          </div>
          <div>
            <a href="#navigation" class="primary-link text-lg">Navigation</a>
            <ul class="mt-2 ml-4">
              <li class="mt-1"><a href="#nav-links" class="primary-link">Nav Links</a></li>
              <li class="mt-1"><a href="#dropdown-menu" class="primary-link">Dropdown Menu</a></li>
            </ul>
          </div>
          <div>
            <a href="#cards" class="primary-link text-lg">Cards</a>
            <ul class="mt-2 ml-4">
              <li class="mt-1"><a href="#card-example" class="primary-link">Card Example</a></li>
            </ul>
          </div>
        </div>
      </nav>
    </section>

    <!-- Buttons Section -->
    <section id="buttons" class="mb-16">
      <h2 class="h2">Buttons</h2>
      
      <!-- Basic Button Variants -->
      <div id="button-variants" class="mb-8">
        <h3 class="h3">Basic Variants</h3>
        <div class="flex flex-wrap gap-4">
          {buttonExamples.map(button => (
            <Button variant={button.variant}>{button.text}</Button>
          ))}
        </div>
      </div>

      <!-- Button States -->
      <div id="button-states" class="mb-8">
        <h3 class="h3">States</h3>
        <div class="flex flex-wrap gap-4">
          <Button variant="primary">Default</Button>
          <Button variant="primary" disabled>Disabled</Button>
          <Button variant="primary" loading>Loading</Button>
        </div>
      </div>

      <!-- Buttons with Arrows -->
      <div id="button-arrows" class="mb-8">
        <h3 class="h3">With Arrows</h3>
        <div class="flex flex-wrap gap-4">
          {arrowExamples.map(button => (
            <Button variant="primary" arrow={button.arrow}>{button.text}</Button>
          ))}
        </div>
      </div>

      <!-- Link Buttons -->
      <div id="button-links" class="mb-8">
        <h3 class="h3">Link Buttons</h3>
        <div class="flex flex-wrap gap-4">
          <Button variant="primary" href="#" target="_blank">External Link</Button>
          <Button variant="outline" href="#">Internal Link</Button>
        </div>
      </div>
    </section>

    <!-- Typography Section -->
    <section id="typography" class="mb-16">
      <h2 class="h2">Typography</h2>

      <!-- Headings -->
      <div id="headings" class="mb-8">
        <h3 class="h3">Headings</h3>
        <h1 class="h1">Heading 1</h1>
        <h2 class="h2">Heading 2</h2>
        <h3 class="h3">Heading 3</h3>
        <h4 class="h4">Heading 4</h4>
      </div>

      <!-- Semantic Headings -->
      <div id="semantic-headings" class="mb-8">
        <h3 class="h3">Semantic Headings</h3>
        <p class="semantic-description">Use semantic heading classes to maintain proper document outline while using different visual styles:</p>
        <div class="space-y-4">
          <h2 class="h4">Small Section Heading (h2 with h4 style)</h2>
          <h3 class="h2">Large Subsection (h3 with h2 style)</h3>
        </div>
      </div>

      <!-- Text Sizes -->
      <div id="text-sizes" class="mb-8">
        <h3 class="h3">Text Sizes</h3>
        <p class="text-small">Small Text</p>
        <p class="text-regular">Regular Text</p>
        <p class="text-large">Large Text</p>
      </div>

      <!-- Font Weights -->
      <div id="font-weights" class="mb-8">
        <h3 class="h3">Font Weights</h3>
        <p class="weight-normal">Normal Weight</p>
        <p class="weight-medium">Medium Weight</p>
        <p class="weight-semibold">Semibold Weight</p>
        <p class="weight-bold">Bold Weight</p>
      </div>

      <!-- Body Text -->
      <div id="body-text" class="mb-8">
        <h3 class="h3">Body Text</h3>
        <p class="description">Description text style with slightly reduced opacity for secondary information.</p>
        <p class="mb-4">Regular paragraph text with good readability for longer content sections. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
      </div>

      <!-- Links -->
      <div id="links" class="mb-8">
        <h3 class="h3">Links</h3>
        <p>Text with a <a href="#" class="primary-link">primary link</a> styled consistently.</p>
      </div>
    </section>

    <!-- Badges Section -->
    <section id="badges" class="mb-16">
      <h2 class="h2">Badges</h2>

      <!-- Basic Badge -->
      <div id="basic-badge" class="mb-8">
        <h3 class="h3">Basic Badge</h3>
        <div class="flex gap-2">
          <Badge>Default</Badge>
          <Badge variant="success">Success</Badge>
          <Badge variant="warning">Warning</Badge>
          <Badge variant="error">Error</Badge>
        </div>
      </div>

      <!-- Badge with Label -->
      <div id="badge-label" class="mb-8">
        <h3 class="h3">With Label</h3>
        <div class="flex gap-2">
          <Badge label="Status">Active</Badge>
          <Badge label="Type" variant="success">Feature</Badge>
        </div>
      </div>

      <!-- Badge in Context -->
      <div id="badge-context" class="mb-8">
        <h3 class="h3">In Context</h3>
        <div class="flex items-center gap-2">
          <h4 class="context-title">Project Status</h4>
          <Badge variant="success">Live</Badge>
        </div>
      </div>

      <!-- Filter Badges -->
      <div id="filter-badges" class="mb-8">
        <h3 class="h3">Filter Badges</h3>
        <div class="flex flex-wrap gap-2">
          <button class="filter-badge">All Items</button>
          <button class="filter-badge">Active</button>
          <button class="filter-badge">Archived</button>
        </div>
      </div>
    </section>

    <!-- Alerts Section -->
    <section id="alerts" class="mb-16">
      <h2 class="h2">Alerts</h2>
      <div class="space-y-8">
        <!-- Info Alert -->
        <div id="alert-info">
          <h3 class="h3">Info Alert</h3>
          <div class="alert alert-info">
            <div class="alert-content">
              <div class="alert-header">
                <div class="alert-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path>
                    <path d="M12 9h.01"></path>
                    <path d="M11 12h1v4h1"></path>
                  </svg>
                </div>
                <p class="alert-title">Good to know</p>
              </div>
              <p class="alert-description">A new feature is available. You will be notified when it is ready.</p>
            </div>
          </div>
        </div>

        <!-- Success Alert -->
        <div id="alert-success">
          <h3 class="h3">Success Alert</h3>
          <div class="alert alert-success" role="alert">
            <div class="alert-content">
              <div class="alert-header">
                <div class="alert-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M17 3.34a10 10 0 1 1 -14.995 8.984l-.005 -.324l.005 -.324a10 10 0 0 1 14.995 -8.336zm-1.293 5.953a1 1 0 0 0 -1.32 -.083l-.094 .083l-3.293 3.292l-1.293 -1.292l-.094 -.083a1 1 0 0 0 -1.403 1.403l.083 .094l2 2l.094 .083a1 1 0 0 0 1.226 0l.094 -.083l4 -4l.083 -.094a1 1 0 0 0 -.083 -1.32z" stroke-width="0" fill="currentColor"></path>
                  </svg>
                </div>
                <p class="alert-title">Success</p>
              </div>
              <p class="alert-description">Your changes have been saved.</p>
            </div>
          </div>
        </div>

        <!-- Warning Alert -->
        <div id="alert-warning">
          <h3 class="h3">Warning Alert</h3>
          <div class="alert alert-warning" role="alert">
            <div class="alert-content">
              <div class="alert-header">
                <div class="alert-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M12 1.67c.955 0 1.845 .467 2.39 1.247l.105 .16l8.114 13.548a2.914 2.914 0 0 1 -2.307 4.363l-.195 .008h-16.225a2.914 2.914 0 0 1 -2.582 -4.2l.099 -.185l8.11 -13.538a2.914 2.914 0 0 1 2.491 -1.403zm.01 13.33l-.127 .007a1 1 0 0 0 0 1.986l.117 .007l.127 -.007a1 1 0 0 0 0 -1.986l-.117 -.007zm-.01 -7a1 1 0 0 0 -.993 .883l-.007 .117v4l.007 .117a1 1 0 0 0 1.986 0l.007 -.117v-4l-.007 -.117a1 1 0 0 0 -.993 -.883z"></path>
                  </svg>
                </div>
                <p class="alert-title">Warning!</p>
              </div>
              <p class="alert-description">This action cannot be undone. Please proceed with caution.</p>
            </div>
          </div>
        </div>

        <!-- Error Alert -->
        <div id="alert-error">
          <h3 class="h3">Error Alert</h3>
          <div class="alert alert-error" role="alert">
            <div class="alert-content">
              <div class="alert-header">
                <div class="alert-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M12 1.67c.955 0 1.845 .467 2.39 1.247l.105 .16l8.114 13.548a2.914 2.914 0 0 1 -2.307 4.363l-.195 .008h-16.225a2.914 2.914 0 0 1 -2.582 -4.2l.099 -.185l8.11 -13.538a2.914 2.914 0 0 1 2.491 -1.403zm.01 13.33l-.127 .007a1 1 0 0 0 0 1.986l.117 .007l.127 -.007a1 1 0 0 0 0 -1.986l-.117 -.007zm-.01 -7a1 1 0 0 0 -.993 .883l-.007 .117v4l.007 .117a1 1 0 0 0 1.986 0l.007 -.117v-4l-.007 -.117a1 1 0 0 0 -.993 -.883z"></path>
                  </svg>
                </div>
                <p class="alert-title">Warning! Time for a giggle Break!!</p>
              </div>
              <ul class="alert-list">
                <li>
                  <p class="alert-description">Your password must be at least 8 characters, because even passwords need a little length to protect their secrets.</p>
                </li>
                <li>
                  <p class="alert-description">Your password must include at least one pro wrestling finishing move, so you can 'pin' down your security like a champ</p>
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Neutral Alert -->
        <div id="alert-neutral">
          <h3 class="h3">Neutral Alert</h3>
          <div class="alert alert-neutral">
            <div class="alert-content">
              <div class="alert-header">
                <div class="alert-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path>
                    <path d="M12 9h.01"></path>
                    <path d="M11 12h1v4h1"></path>
                  </svg>
                </div>
                <p class="alert-title">Neutral alert!</p>
              </div>
              <p class="alert-description">A new feature is available. You will be notified when it is ready.</p>
            </div>
          </div>
        </div>

        <!-- Neutral Dark Alert -->
        <div id="alert-neutral-dark">
          <h3 class="h3">Neutral Dark Alert</h3>
          <div class="alert alert-neutral-dark">
            <div class="alert-content">
              <div class="alert-header">
                <div class="alert-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path>
                    <path d="M12 9h.01"></path>
                    <path d="M11 12h1v4h1"></path>
                  </svg>
                </div>
                <p class="alert-title">Neutral alert!</p>
              </div>
              <p class="alert-description">A new feature is available. You will be notified when it is ready.</p>
              <div class="alert-actions">
                <button class="alert-button alert-button-primary">View Updates</button>
                <button class="alert-button alert-button-secondary">Remind me later</button>
              </div>
            </div>
          </div>
        </div>

        <!-- Accent Alert -->
        <div id="alert-accent">
          <h3 class="h3">Accent Alert</h3>
          <div class="alert alert-accent">
            <div class="alert-content">
              <div class="alert-header">
                <div class="alert-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path>
                    <path d="M12 9h.01"></path>
                    <path d="M11 12h1v4h1"></path>
                  </svg>
                </div>
                <p class="alert-title">Neutral alert!</p>
              </div>
              <p class="alert-description">A new feature is available. You will be notified when it is ready.</p>
            </div>
          </div>
        </div>

        <!-- Neutral Alert with Actions -->
        <div id="alert-with-actions">
          <h3 class="h3">Neutral Alert with Actions</h3>
          <div class="alert alert-neutral">
            <div class="alert-content">
              <div class="alert-header">
                <div class="alert-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path>
                    <path d="M12 9h.01"></path>
                    <path d="M11 12h1v4h1"></path>
                  </svg>
                </div>
                <p class="alert-title">Neutral alert!</p>
              </div>
              <p class="alert-description">A new feature is available. You will be notified when it is ready.</p>
              <div class="alert-actions">
                <button class="alert-button alert-button-accent">View Updates</button>
                <button class="alert-button alert-button-outline">Remind me later</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Navigation Section -->
    <section id="navigation" class="mb-16">
      <h2 class="h2">Navigation</h2>

      <!-- Nav Links -->
      <div id="nav-links" class="mb-8">
        <h3 class="h3">Nav Links</h3>
        <nav class="flex gap-4">
          <NavLink navItem={{ text: "Home", link: "#" }} />
          <NavLink navItem={{ text: "About", link: "#" }} />
          <NavLink navItem={{ text: "Contact", link: "#" }} />
        </nav>
      </div>

      <!-- Dropdown Menu -->
      <div id="dropdown-menu" class="mb-8">
        <h3 class="h3">Dropdown Menu</h3>
        <div class="flex gap-4">
          <NavDropdown
            navItem={{
              text: "Products",
              dropdown: [
                { text: "Overview", link: "#" },
                { text: "Features", link: "#" },
                { text: "Pricing", link: "#" }
              ]
            }}
          />
          <NavDropdown
            navItem={{
              text: "Resources",
              dropdown: [
                { text: "Documentation", link: "#" },
                { text: "Guides", link: "#" },
                { text: "Support", link: "#" }
              ]
            }}
          />
        </div>
      </div>
    </section>

    <!-- Cards Section -->
    <section id="cards" class="mb-16">
      <h2 class="h2">Cards</h2>

      <!-- Social Card Example -->
      <div id="social-card-example" class="mb-8">
        <h3 class="h3">Social Card</h3>
        <div class="grid gap-6 md:grid-cols-3 lg:grid-cols-4">
          <SocialCard
            name="LinkedIn"
            href="https://linkedin.com"
            icon="tabler/brand-linkedin"
          />
          <SocialCard
            name="Twitter"
            href="https://twitter.com"
            icon="tabler/brand-twitter"
          />
          <SocialCard
            name="GitHub"
            href="https://github.com"
            icon="tabler/brand-github"
          />
        </div>
      </div>

      <!-- Card Example -->
      <div id="card-example" class="mb-8">
        <h3 class="h3">Card Example</h3>
        <div class="grid gap-16 sm:grid-cols-2">
          <article>
            <a href="#" class="card-container">
              <img
                src="/assets/grid-pattern-light.svg"
                alt="Example Card Image"
                class="card-image"
              />
            </a>
            <div>
              <!-- Categories -->
              <div class="card-categories">
                <span class="inline-block rounded-full bg-gray-200 px-3 py-1 text-sm font-semibold text-gray-700">Category 1</span>
                <span class="inline-block rounded-full bg-gray-200 px-3 py-1 text-sm font-semibold text-gray-700">Category 2</span>
              </div>

              <!-- Author and Date -->
              <div class="card-author-date">
                <p>Author Name</p>
                <span>&bull;</span>
                <p>October 10, 2023</p>
              </div>

              <!-- Title -->
              <div class="mt-2">
                <a href="#" class="decoration-primary-500 hover:underline">
                  <h2 class="card-title">Example Card Title</h2>
                </a>
              </div>

              <!-- Description -->
              <p class="card-description">This is an example description for the card. It can be longer and more detailed.</p>

              <!-- Read Post Button -->
              <div class="mt-4">
                <a href="#" class="card-read-button">
                  Read Post
                  <svg xmlns="http://www.w3.org/2000/svg" class="size-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                  </svg>
                </a>
              </div>
            </div>
          </article>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
